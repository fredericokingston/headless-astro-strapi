{
  "name": "astro-strapi-example-project",
  "version": "1.0.0",
  "description": "Astro 5 project with Strapi 5",
  "type": "module",
  "scripts": {
    "client": "pnpm dev --prefix ../client/",
    "server": "pnpm dev --prefix ../server/",
    "setup:client": "cd client && pnpm && node --loader ts-node/esm ../copy-env.mts ./",
    "setup:server": "cd server && pnpm && node --loader ts-node/esm ../copy-env.mts ./",
    "setup": "pnpm install && pnpm setup:client && pnpm setup:server",
    "dev": "pnpm concurrently \"cd server && pnpm develop\" \"npx wait-on http://localhost:1337 && cd client && pnpm dev\"",
    "seed": "cd server && pnpm strapi import -f ./seed-data.tar.gz --force",
    "export": "cd server && pnpm strapi export --no-encrypt -f ./seed-data",
    "repo:upstream": "git fetch upstream && git merge upstream/main"
  },
  "dependencies": {
    "@types/node": "^22.5.2",
    "astro": "^5.7.4",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  }
}
