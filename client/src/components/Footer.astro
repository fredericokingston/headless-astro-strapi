---
import type { GlobalPageFooter } from "../utils/types";
import StrapiImage from "./StrapiImage.astro";

interface Props {
  data: GlobalPageFooter;
}

const {
  data: { logo, navItems, socialLinks, text },
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<section>
  <div class="py-20 mt-20 bg-gray-100">
    <div class="container mx-auto px-4">
      <div
        class="pb-12 flex flex-wrap items-center justify-between border-b border-gray-100"
      >
        <div class="w-full lg:w-1/5 mb-12 lg:mb-4">
          <a
            class="inline-block text-3xl font-bold leading-none"
            href={logo.logoLink}
          >
            <StrapiImage
              src={logo.image.url}
              alt={logo.image.alternativeText}
              height={40}
              width={40}
            />
          </a>
        </div>
        <div class="w-full lg:w-auto">
          <ul class="flex flex-wrap lg:space-x-5 items-center">
            {
              navItems &&
                navItems.map((item) => (
                  <li class="w-full md:w-auto mb-2 md:mb-0">
                    <a
                      class="lg:text-sm text-gray-400 hover:text-gray-500"
                      href={item.href}
                    >
                      {item.label}
                    </a>
                  </li>
                ))
            }
          </ul>
        </div>
      </div>
      <div class="mt-8 flex flex-wrap justify-between items-center">
        <p class="order-last text-sm text-gray-400">
          &copy; {currentYear}. {text}
        </p>
        <div class="mb-4 lg:mb-0 order-first lg:order-last">
          {
            socialLinks &&
              socialLinks.map((item) => (
                <a
                  class="inline-block mr-2 p-2 bg-gray-50 hover:bg-gray-100 rounded"
                  href={item.logoLink}
                >
                  <StrapiImage
                    src={item.image.url}
                    alt={item.image.alternativeText}
                    height={20}
                    width={20}
                  />
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
