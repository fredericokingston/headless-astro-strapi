---
import { marked } from "marked";
import type { MarkdownProps } from "../../utils/types";
interface Props {
  data: MarkdownProps;
}

const { data: { content } } = Astro.props;
const html = marked(content);
---


<article class="max-w-2xl mx-auto mb-6 leading-loose text-gray-500 rich-text" set:html={html} />



<style is:global>  
  /******************************************* 
  Rich Text Styles
  *******************************************/
 
  /* Headers */
  article.rich-text h1 {
    font-size: 2.25rem; /* text-4xl */
    font-weight: bold;
    margin-bottom: 2rem; /* mb-8 */
    color: var(--color-secondary);
  }

  article.rich-text h2 {
    font-size: 1.875rem; /* text-3xl */
    font-weight: bold;
    margin-bottom: 2rem; /* mb-8 */
    color: var(--color-secondary);
  }

  article.rich-text h3 {
    font-size: 1.5rem; /* text-2xl */
    font-weight: bold;
    margin-bottom: 1.5rem; /* mb-6 */
    color: var(--color-secondary);
  }

  article.rich-text h4 {
    font-size: 1.25rem; /* text-xl */
    font-weight: bold;
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-secondary);
  }

  article.rich-text h5 {
    font-size: 1.125rem; /* text-lg */
    font-weight: bold;
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-secondary);
  }

  article.rich-text h6 {
    font-size: 1rem; /* text-base */
    font-weight: bold;
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-secondary);
  }

  /* Horizontal rules */
  article.rich-text hr {
    color: var(--color-secondary);
    margin: 2rem 0; /* my-8 */
  }

  article.rich-text a {
    color: #1a202c; /* text-gray-900 */
    text-decoration: underline;
    font-size: 1.25rem; /* text-xl */
    line-height: 1.625; /* leading-relaxed */
  }

  /* Typographic replacements */
  article.rich-text p {
    margin-bottom: 2rem; /* mb-8 */
    font-size: 1.25rem; /* text-xl */
    line-height: 1.625; /* leading-relaxed */
    color: var(--color-secondary);
  }

  /* Emphasis */
  article.rich-text strong {
    font-weight: bold;
    font-size: 1.25rem; /* text-xl */
    line-height: 1.625; /* leading-relaxed */
  }

  article.rich-text em {
    font-style: italic;
    font-size: 1.25rem; /* text-xl */
    line-height: 1.625; /* leading-relaxed */
  }

  article.rich-text del {
    text-decoration: line-through;
    font-size: 1.25rem; /* text-xl */
    line-height: 1.625; /* leading-relaxed */
  }

  /* Blockquotes */
  article.rich-text blockquote {
    border-left: 4px solid #cbd5e0; /* border-gray-400 */
    padding-left: 1rem; /* pl-4 */
    padding-top: 0.5rem; /* py-2 */
    padding-bottom: 0.5rem; /* py-2 */
    margin-bottom: 1rem; /* mb-4 */
  }

  /* Lists */
  article.rich-text ul {
    list-style-type: disc;
    padding-left: 1rem; /* pl-4 */
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-secondary);
  }

  article.rich-text ol {
    list-style-type: decimal;
    padding-left: 1rem; /* pl-4 */
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-secondary);
  }

  article.rich-text li {
    margin-bottom: 0.5rem; /* mb-2 */
    color: var(--color-secondary);
  }

  article.rich-text li > ul {
    list-style-type: disc;
    padding-left: 1rem; /* pl-4 */
    margin-bottom: 0.5rem; /* mb-2 */
  }

  article.rich-text li > ol {
    list-style-type: decimal;
    padding-left: 1rem; /* pl-4 */
    margin-bottom: 0.5rem; /* mb-2 */
  }

  /* Code blocks */
  article.rich-text pre {
    font-family: monospace;
    color: var(--color-secondary);
    border-radius: 0.375rem; /* rounded */
    padding: 1rem; /* p-4 */
    margin: 1.5rem 0; /* my-6 */
  }

  article.rich-text code {
    font-family: monospace;
    color: var(--color-secondary);
    border-radius: 0.375rem; /* rounded */
    padding: 0.5rem 0.5rem; /* px-2 py-1 */
  }

  /* Tables */
  article.rich-text table {
    width: 100%;
    border-collapse: collapse;
    color: var(--color-secondary);
    margin: 1.5rem 0; /* my-6 */
  }

  article.rich-text th {
    color: var(--color-secondary);
    text-align: left;
    padding: 0.5rem 1rem; /* py-2 px-4 */
    font-weight: 600; /* font-semibold */
    border-bottom: 1px solid var(--color-secondary);
  }

  article.rich-text td {
    padding: 0.5rem 1rem; /* py-2 px-4 */
    border-bottom: 1px solid var(--color-secondary);
  }

  /* Images */
  article.rich-text img {
    width: 100%;
    object-fit: cover;
    border-radius: 0.75rem; /* rounded-xl */
    margin: 1.5rem 0; /* my-6 */
  }

  /* Custom containers */
  article.rich-text .warning {
    background-color: #fefcbf; /* bg-yellow-100 */
    border: 1px solid #fbbf24; /* border-yellow-500 */
    color: #7a7d00; /* text-yellow-700 */
    padding: 0.5rem 1rem; /* px-4 py-2 */
    border-radius: 0.5rem; /* rounded-lg */
    margin-bottom: 1rem; /* mb-4 */
  }

  /* Custom styles for the Markdown component */
  .custom-markdown {
    /* Add any additional styles here if needed */
  }

</style>
