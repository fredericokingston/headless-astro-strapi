---
import type { PersonCardProps } from "../../utils/types";
import StrapiImage from "../StrapiImage.astro";
interface Props {
  data: PersonCardProps;
}

const {
  data: { personName, personJob, image, text },
} = Astro.props;
---

<section>
  <div class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div
          class="mb-8 p-6 flex flex-wrap items-center bg-white rounded-lg shadow"
        >
          <div class="w-full lg:w-1/3">
            <StrapiImage
              src={image.url}
              alt={image.alternativeText}
              height={600}
              width={800}
              class="mb-5 lg:mb-0 w-full rounded-lg object-cover max-h-[350px]"
            />
          </div>
          <div class="w-full lg:w-2/3">
            <div class="max-w-lg mx-auto">
              <p class="mb-8 text-2xl text-gray-500">{text}</p>
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="text-2xl font-bold font-heading">{personName}</h4>
                  <p class="text-blueGrey-500">{personJob}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
