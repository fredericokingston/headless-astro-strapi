---
import type { CardGridProps } from "../../utils/types";

interface Props {
  data: CardGridProps;
}

const {
  data: { card },
} = Astro.props;

---

<section>
  <div class="pt-12 pb-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap -mx-4">
        {
          card &&
            card.map((card) => {
              return (
                <div class="mb-12 lg:mb-0 w-full md:w-1/2 lg:w-1/4 px-4">
                  <h4 class="mb-4 text-2xl font-bold font-heading">
                    {card.heading}
                  </h4>
                  <p class="text-gray-500 leading-loose">{card.text}</p>
                </div>
              );
            })
        }
      </div>
    </div>
  </div>
</section>
