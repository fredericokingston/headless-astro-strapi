---
import type { HeadingSectionProps } from "../../utils/types";

interface Props {
  data: HeadingSectionProps;
}

const {
  data: { heading, subHeading, anchorLink },
} = Astro.props;

---

<section id={anchorLink}>
  <div class="pt-28 pb-4 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="mb-16 max-w-md mx-auto text-center">
        <span class="text-green-600 font-bold">{subHeading}</span>
        <h2 class="text-4xl md:text-5xl font-bold">{heading}</h2>
      </div>
    </div>
  </div>
</section>