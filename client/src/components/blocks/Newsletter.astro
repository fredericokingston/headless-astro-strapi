---
import type { NewsletterProps } from "../../utils/types";

interface Props {
  data: NewsletterProps;
}

const {
  data: { heading, text, placeholder, label },
} = Astro.props;
---

<section class="max-w-6xl mx-auto bg-white rounded-2xl">
  <div class="py-20">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap items-center">
        <div
          class="mb-6 w-full lg:w-auto max-w-lg mx-auto lg:ml-6 mr-auto text-center lg:text-left"
        >
          <h2 class="text-4xl font-bold mb-2">{heading}</h2>
          <p class="text-gray-400">{text}</p>
        </div>
        <div class="w-full lg:w-2/5">
          <form action="">
            <div
              class="max-w-md lg:max-w-sm mx-auto flex flex-wrap items-center"
            >
              <input
                class="outline-1 outline-gray-200 bg-white flex-grow py-3 px-4 mr-4 text-xs rounded leading-loose"
                type="email"
                placeholder={placeholder}
              />
              <button
                class="flex-none py-2 px-6 rounded-t-xl rounded-l-xl bg-green-600 hover:bg-green-700 text-gray-50 font-bold leading-loose transition duration-200"
              >
                {label}
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
